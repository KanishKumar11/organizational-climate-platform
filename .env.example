# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/organizational-climate-platform

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your-ai-service-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-production
FIELD_ENCRYPTION_KEY=your-32-character-field-encryption-key-here-change-in-production

# Security Headers (Production)
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
PROTOCOL=https

# Application Configuration
NODE_ENV=development
APP_URL=http://localhost:3000